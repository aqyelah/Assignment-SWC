import java.util.Arrays;
import java.util.Scanner;

public class InsertionSortBinarySearch {
    public static void insertionSort(int[] arr) {
        for (int i = 1; i < arr.length; i++) {
            int key = arr[i];
            int j = i - 1;
            while (j >= 0 && arr[j] > key) {
                arr[j + 1] = arr[j];
                j--;
            }
            arr[j + 1] = key;
        }
    }
    public static int binarySearch(int[] arr, int target) {
        int first = 0, last = arr.length - 1;
        while (first <= last) {
            int middle = (first + last) / 2;
            if (arr[middle] == target) {
                return middle; // found
            } else if (arr[middle] < target) {
                first = middle + 1;
            } else {
                last = middle - 1;
            }
        }
        return -1; // not found
    }
    public static void main(String[] args) {
        int[] distances = {15, 25, 35, 30, 28, 20}; 

        System.out.println("Original Distances: " + Arrays.toString(distances));

        insertionSort(distances);
        System.out.println("Sorted Distances: " + Arrays.toString(distances));
        Scanner sc = new Scanner(System.in);
        System.out.print("\nEnter distance to search: ");
        int target = sc.nextInt();

        int index = binarySearch(distances, target);

        if (index != -1)
            System.out.println("Distance " + target + " found at index " + index + ".");
        else
            System.out.println("Distance " + target + " not found in the list.");

        sc.close();
    }
}
