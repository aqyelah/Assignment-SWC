import java.util.*;

public class MinHeap {

    private List<Integer> heap = new ArrayList<>();

    public void insert(int value) {
        heap.add(value);
        int current = heap.size() - 1;
        while (current > 0 && heap.get(current) < heap.get((current - 1) / 2)) {
            Collections.swap(heap, current, (current - 1) / 2);
            current = (current - 1) / 2;
        }
    }

    
    public int extractMin() {
        if (heap.isEmpty()) throw new IllegalStateException("Heap is empty");
        int min = heap.get(0);
        int last = heap.remove(heap.size() - 1);
        if (!heap.isEmpty()) {
            heap.set(0, last);
            heapify(0);
        }
        return min;
    }

   
    private void heapify(int i) {
        int smallest = i;
        int left = 2 * i + 1;
        int right = 2 * i + 2;

        if (left < heap.size() && heap.get(left) < heap.get(smallest))
            smallest = left;
        if (right < heap.size() && heap.get(right) < heap.get(smallest))
            smallest = right;

        if (smallest != i) {
            Collections.swap(heap, i, smallest);
            heapify(smallest);
        }
    }

    
    public void displayHeap() {
        System.out.println("Current Heap: " + heap);
    }

    public static void main(String[] args) {
        MinHeap heap = new MinHeap();

     
        int[] numbers = {10, 3, 15};
        System.out.println("Original Numbers: " + Arrays.toString(numbers));

       
        for (int num : numbers) {
            heap.insert(num);
            System.out.println("Inserted " + num + " -> Heap now: " + heap.heap);
        }

        
        int min = heap.extractMin();
        System.out.println("\nMin-Heap Extract Min: " + min);
        System.out.println("Heap after extraction: " + heap.heap);
    }
}
