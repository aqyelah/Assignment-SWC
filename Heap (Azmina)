
public class MinHeapRoute
{
    private int[] heap;      
    private int size;        
    private int capacity;    

    // Constructor
    public MinHeapRoute(int capacity) {
        this.capacity = capacity;
        heap = new int[capacity];
        size = 0;
    }

    private int parent(int i) { return (i - 1) / 2; }
    private int left(int i) { return 2 * i + 1; }
    private int right(int i) { return 2 * i + 2; }

    // Insert a new route distance into the heap
    public void insert(int distance) {
        if (size == capacity) {
            System.out.println("Heap is occupied!");
            return;
        }

        heap[size] = distance;
        int current = size;
        size++;

        while (current > 0 && heap[current] < heap[parent(current)]) {
            int temp = heap[current];
            heap[current] = heap[parent(current)];
            heap[parent(current)] = temp;
            current = parent(current);
        }
    }

    // Extract or remove the smallest 
    public int extractMin() {
        if (size <= 0) {
            System.out.println("Heap is empty!");
            return -1;
        }
        if (size == 1) {
            return heap[--size];
        }

        int root = heap[0];         
        heap[0] = heap[--size];     
        heapify(0);                 
        return root;
    }

    private void heapify(int i) {
        int smallest = i;
        int l = left(i);
        int r = right(i);

        if (l < size && heap[l] < heap[smallest]) smallest = l;
        if (r < size && heap[r] < heap[smallest]) smallest = r;

        if (smallest != i) {
            int temp = heap[i];
            heap[i] = heap[smallest];
            heap[smallest] = temp;
            heapify(smallest);
        }
    }

    // Display all route distances in the heap
    public void display() {
        System.out.print("Current route distances in Min-Heap: ");
        for (int i = 0; i < size; i++) {
            System.out.print(heap[i] + " ");
        }
        System.out.println();
    }

    // Example usage
    public static void main(String[] args) {
        MinHeapRoute heap = new MinHeapRoute(10);

        System.out.println("Inserting route distances (nm): 35, 15, 25, 40, 10");
        heap.insert(35);
        heap.insert(15);
        heap.insert(25);
        heap.insert(40);
        heap.insert(10);

        heap.display();

        System.out.println("Remove the minimum value (The smallest): " + heap.extractMin());
        heap.display();
    }
}
